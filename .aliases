### neovim
alias vi="nvim"
alias vim="nvim"
alias vimdiff="nvim -d"
if [ -f /etc/redhat-release ]; then
    alias vi="$HOME/nvim-linux64/bin/nvim"
    alias vim="$HOME/nvim-linux64/bin/nvim"
    alias vimdiff="$HOME/nvim-linux64/bin/nvim -d"
fi

