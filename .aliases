### working aliases
# remove trailing whitespace
alias rmwsp="sed -i 's/[ \t]*$//'"

### tmux aliases
alias tns="tmux new-session -s"
alias ta="tmux attach"
alias td="tmux detach"
alias tls="tmux list-sessions"

### git aliases
# git pull
alias gp="git pull"
# git fetch origin
alias gfo="git fetch origin"
# git merge origin master
alias gmo="git merge origin master"
# git fetch and merge
alias gfm="git fetch origin && git merge origin master"
# git checkout
alias gc="git checkout"
# git checkout master
alias gcm="git checkout master"
# git checkout and make a new branch
alias gcb="git checkout -b"
# see the branches
alias gb="git branch"
# delete a branch
alias gbd="git branch -D"
# stash changes
alias gs="git stash save"
# list stashes
alias gsl="git stash list"
# apply stash
alias gsa="git stash apply"
# drop stash
alias gsd="git stash drop"
# git diff full index
alias gd="git diff --full-index"
# git diff name only
alias gdn="git diff --name-only"
# git status
alias gstat="git status"
# git log
alias gl="git log"
# git add $(gdn)
alias gadn='git add $(gdn)'
# git commit -m
alias gmit="git commit -m"
